{
  "name": "vue-mac-keyboard",
  "type": "module",
  "version": "0.2.0",
  "packageManager": "pnpm@10.22.0",
  "description": "Macbook computer keyboard style for VueJS component.",
  "keywords": [
    "keyboard",
    "macbook",
    "vue"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com",
    "url": "https://ntnyq.com"
  },
  "repository": "ntnyq/vue-mac-keyboard",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./style": "./dist/style.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "build:style": "sass src/style.scss dist/style.css --no-source-map --style=compressed",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "play": "pnpm -C playground run dev",
    "play:build": "pnpm -C playground run build",
    "prepare": "husky",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint test typecheck",
    "release:version": "bumpp",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.8.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "sass": "^1.94.2",
    "tinyexec": "^1.0.2",
    "tsdown": "^0.16.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  },
  "nano-staged": {
    "*.{js,ts,cjs,mjs,vue,md,yml,yaml,json}": "eslint --fix"
  }
}
